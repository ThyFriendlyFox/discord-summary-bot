{
  "name": "discord-summary-bot",
  "version": "1.0.0",
  "description": "A Discord bot that summarizes messages using OpenAI",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "setup": "node setup.js",
    "menu": "node src/cli/index.js",
    "assistant": "node src/cli/index.js",
    "test": "jest --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:e2e": "jest tests/simulated-e2e --runInBand",
    "benchmark:sim": "jest tests/simulated-e2e --json --outputFile=reports/benchmark.json"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": ["discord", "bot", "summary", "openai"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "@google/genai": "^1.12.0",
    "dotenv": "^16.3.1",
    "moment-timezone": "^0.5.43",
    "sqlite3": "^5.1.6",
    "enquirer": "^2.4.1",
    "chalk": "^4.1.2",
    "figlet": "^1.7.0",
    "openai": "^4.52.0",
    "@anthropic-ai/sdk": "^0.27.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0"
  }
} 